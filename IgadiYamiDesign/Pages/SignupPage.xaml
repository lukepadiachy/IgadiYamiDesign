<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IgadiYamiDesign.Pages.SignupPage"
             Title="Sign Up"
             BackgroundColor="#006838">
    
    <VerticalStackLayout Padding="10">
        <Label Padding="20"
               
            Text="Create New Account"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            TextColor="White"
               FontSize="20"
               />
        <StackLayout Padding="10" Spacing="10" >

            <Frame Padding="5" BackgroundColor="#F9FFE0">
            <Entry Placeholder="Name" PlaceholderColor="Black"/>
        </Frame>

            <Frame Padding="5" BackgroundColor="#F9FFE0" >
            <Entry Placeholder="Surname" PlaceholderColor="Black"/>
        </Frame>

            <Frame Padding="5" BackgroundColor="#F9FFE0" >
        <Entry Placeholder="Email Address/Phone Number" PlaceholderColor="Black"/>
        </Frame>

            <Frame Padding="5" BackgroundColor="#F9FFE0">
            <Entry Placeholder="Password" PlaceholderColor="Black"/>
        </Frame>
        <Label 
            Text="Already Have a Account? Login In"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            TextColor="White"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>