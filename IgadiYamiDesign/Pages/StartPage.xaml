<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IgadiYamiDesign.Pages.StartPage"
             BackgroundColor="#F9FFE0"
             Title="StartPage">
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20" Padding="10,90,0,0">
        <Image Source="igadiimage.png" HeightRequest="200" WidthRequest="200"/>
        <Label FontFamily="mont" HorizontalOptions="Center" Text="Welcome to Igadi Yami" FontSize="Large" FontAttributes="Bold"  TextColor="#006838" />
        <Label FontFamily="mont" Text="Your personal gardening partner, here to hold your hand and walk you through your gardening" FontSize="Small" TextColor="#55833D" />
        <Button Text="Get Started" FontFamily="mont" CornerRadius="25" BackgroundColor="#006838" TextColor="White" WidthRequest="200" HeightRequest="50" Margin="0,20,0,0" 
                Clicked="GetStarted_Clicked"/>
    </VerticalStackLayout>
</ContentPage>