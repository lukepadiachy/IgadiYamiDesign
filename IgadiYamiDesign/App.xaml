<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IgadiYamiDesign"
             x:Class="IgadiYamiDesign.App">
    <Application.Resources>
        <ResourceDictionary>

            <!-- Light mode resources -->
            <ResourceDictionary x:Key="LightTheme">
                <Color x:Key="PageBackgroundColor">#F5F8D9</Color>
                <!-- Add other light theme colors here -->
            </ResourceDictionary>

            <!-- Dark mode resources -->
            <ResourceDictionary x:Key="DarkTheme">
                <Color x:Key="PageBackgroundColor">#2C2C2C</Color>
                <!-- Add other dark theme colors here -->
            </ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
